<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_jogo_dialog"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_nome_dialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="end"
        android:justificationMode="inter_word"
        android:text="NARUTO Ultimate Ninja Storm 4"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_jogo_dialog"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Desenvolvedora"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_jogo_dialog"
        app:layout_constraintTop_toBottomOf="@+id/txt_nome_dialog" />

    <TextView
        android:id="@+id/txt_desenvolvedora"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="BANDAI Nanco"
        android:textColor="@color/preto"
        app:layout_constraintStart_toEndOf="@+id/img_jogo_dialog"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Classificação"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_jogo_dialog"
        app:layout_constraintTop_toBottomOf="@+id/txt_desenvolvedora" />

    <TextView
        android:id="@+id/txt_classificacao"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="14 Anos"
        android:textColor="@color/preto"
        app:layout_constraintStart_toEndOf="@+id/img_jogo_dialog"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Data de Lançamento"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_jogo_dialog"
        app:layout_constraintTop_toBottomOf="@+id/txt_classificacao" />

    <TextView
        android:id="@+id/txt_preco_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="R$ 99,90"
        android:textColor="@color/preto"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_jogo_dialog" />

    <TextView
        android:id="@+id/txt_data_lancamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="26/07/2016"
        android:textColor="@color/preto"
        app:layout_constraintStart_toEndOf="@+id/img_jogo_dialog"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserrat"
        android:text="LOJAS DISPONÍVEIS"
        android:textColor="@color/preto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_data_lancamento" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewLojasDialog"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"/>


</android.support.constraint.ConstraintLayout>